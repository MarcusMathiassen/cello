#!/bin/bash

output=./cello
olvl=-O1
compiler=clang++
src=./src/platform_macOS.mm
frameworks=-framework\ AppKit
flags= #-fno-exceptions\ -Wall\ -Wextra\ -g\ -fsanitize=address\ -fno-omit-frame-pointer
std=c++2a
debugMode=1
mode=-DDEV=${debugMode}

rm $output

# Create it 
$compiler $src -std=$std $olvl $flags $mode $frameworks -o $output

# Run it
$output
